<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create-usr-role-table" author="yurolejniko@yandex.ru" logicalFilePath="changelog-1.0" context="prod">
        <createTable tableName="USER_ROLE">
            <column autoIncrement="true" name="USER_ROLE_ID" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="user_role_pkey" nullable="false"/>
            </column>
            <column name="ROLE_NAME" type="VARCHAR(1000)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="ROLE_DESCRIPTION" type="VARCHAR(1000)"/>
        </createTable>
    </changeSet>

    <changeSet id="fill-usr-role-table" author="yurolejniko@yandex.ru" logicalFilePath="changelog-1.0" context="prod">
        <insert tableName="USER_ROLE">
            <column name="ROLE_NAME" value="super_admin"/>
        </insert>
        <insert tableName="USER_ROLE">
            <column name="ROLE_NAME" value="admin"/>
        </insert>
        <insert tableName="USER_ROLE">
            <column name="ROLE_NAME" value="moderator"/>
        </insert>
        <insert tableName="USER_ROLE">
            <column name="ROLE_NAME" value="user"/>
        </insert>
    </changeSet>

    <changeSet id="create-as-user-roles-table" author="yurolejniko@yandex.ru" logicalFilePath="changelog-1.0">
        <createTable tableName="AS_USER_ROLE">
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ROLE_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

